#!/bin/sh
# read -p "Update Git repos ?"

# Update config
git --git-dir=$HOME/.bare/ --work-tree=$HOME pull --recurse-submodules --jobs=8
# Echo a new line
echo


# Update password-store
if [ -d $HOME/.password-store/ ]; then
  git -C $HOME/.password-store/ pull --recurse-submodules --jobs=8
  # Echo a new line
  echo
fi


# Backup notes
